    <script>
    document.addEventListener("DOMContentLoaded", function () {
    const cartSidebar = document.getElementById("cartSidebar");
    const viewCartButton = document.getElementById("button1");
    const closeSidebarButton = document.getElementById("closeSidebar");

    function openCartSidebar() {
        cartSidebar.classList.add("active");
    }

    function closeCartSidebar() {
        cartSidebar.classList.remove("active");
    }

    viewCartButton.addEventListener("click", openCartSidebar);
    closeSidebarButton.addEventListener("click", closeCartSidebar);
});

var cart = [];
var cartCount = 0;
var totalAmount = 0;

function AddCart(ItemName, Cost) {
    cart.push({ Item: ItemName, Price: parseFloat(Cost) });
    totalAmount += parseFloat(Cost);
    UpdateCart();
    cartCount++;
    UpdateCartCount();
}

function RemoveFromCart(index) {
    totalAmount -= parseFloat(cart[index].Price);
    cart.splice(index, 1);
    UpdateCart();
    cartCount--;
    UpdateCartCount();
}

function UpdateCart() {
    var cartContainer = document.getElementById("Cart-Container");
    cartContainer.innerHTML = "";
    cart.forEach((item, index) => {
        cartContainer.innerHTML += `
            <div class="cart-item" style="display:flex; justify-content:space-between;">
                <span>${item.Item}</span>
                <span class="cart-price">$${item.Price}</span>
                <button onclick="RemoveFromCart(${index})">Remove</button>
            </div>`;
    });

    cartContainer.innerHTML += `
        <div class="cart-item cart-total" style="margin-top:20px">
            <span><strong><center>Total:</strong></span>
            <span class="cart-price">$${totalAmount.toFixed(2)}</center></span>
        </div>`;
}

function clearCart() {
    cart.length = 0;
    totalAmount = 0;
    UpdateCart();
    cartCount = 0;
    UpdateCartCount(); 
}

function Pay() {
    if (totalAmount === 0) {
        alert("Please select an item.");
    } else {
        location.href = "/checkout";
    }
}

function UpdateCartCount() {
    var button1 = document.getElementById("button1");
    button1.innerHTML = `<i class="fa-solid fa-cart-shopping fa-beat"></i> (${cartCount})`;
}
